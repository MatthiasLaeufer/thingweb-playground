                            "additionalProperties": {
                                "$ref": "#/definitions/event_element"
                            }
                        }
                    }
                },
                "then": {
                    "const": "td-simple-form=pass"
                },
                "else": {
                    "const": "td-simple-form=not-impl"
                }
            }
        }
    },
