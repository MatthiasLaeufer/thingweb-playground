        "required": ["forms"],
        "properties": {
            "forms": {
                "type": "array",
                "minItems": 1,
                "items": {
                    "$ref": "#/definitions/form_element_root"
                }
            }
        }
    },
    "then": {
        "const": "td-simple-form=pass"
    },
    "else": {
        "if": {
            "required": ["properties"],
            "properties": {
                "properties": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/property_element"
                    }
                }
            }
        },
        "then": {
            "const": "td-simple-form=pass"
        },
        "else": {
